{
  "name": "app",
  "version": "1.0.0",
  "description": "Este projeto é uma refatoração do jogo \"Bomb Dash\" para mover sua arquitetura de um modelo puramente client-side para um modelo cliente-servidor seguro e robusto.",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "playwright test",
    "test:e2e": "playwright test",
    "test:docker": "sudo docker compose up --build --abort-on-container-exit",
    "test:frontend": "vite build",
    "test:unit:frontend": "vitest run",
    "deploy:testnet": "npx hardhat run scripts/deploy.js --network bscTestnet",
    "start:backend": "node backend/server.js",
    "start:backend:test": "NODE_ENV=test node backend/server.js",
    "install:all": "npm install && npm install --prefix backend",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint .",
    "format": "prettier --write .",
    "test:smoke": "playwright test --project=smoke",
    "test:integration": "playwright test --project=integration",
    "test:health": "node scripts/health-check.js",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alanvito1/bomb_dash.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/alanvito1/bomb_dash/issues"
  },
  "homepage": "https://github.com/alanvito1/bomb_dash#readme",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@playwright/test": "^1.55.1",
    "buffer": "^6.0.3",
    "chai": "^4.5.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^8.10.2",
    "eslint-plugin-prettier": "^4.2.5",
    "hardhat": "^2.28.0",
    "jsdom": "^27.0.0",
    "mocha": "^11.7.4",
    "prettier": "^2.8.8",
    "process": "^0.11.10",
    "sinon": "^21.0.0",
    "vite": "^5.2.0",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vitest": "^3.2.4",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "axios": "^1.13.5",
    "ethers": "^6.15.0",
    "playwright": "^1.58.2",
    "siwe": "^3.0.0"
  }
}
